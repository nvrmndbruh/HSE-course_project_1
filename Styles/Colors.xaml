<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="BGBrush" Color="#2E2E2E"/>
    <Color x:Key="BGColor">#2E2E2E</Color>

    <SolidColorBrush x:Key="MainTextBrush" Color="#737373"/>
    <Color x:Key="MainTextColor">#737373</Color>

    <SolidColorBrush x:Key="SecondTextBrush" Color="#DBDBDB"/>
    <Color x:Key="SecondTextColor">#DBDBDB</Color>

    <SolidColorBrush x:Key="ErrorBrush" Color="#FF6323"/>
    <Color x:Key="ErrorColor">#FF6323</Color>

    <SolidColorBrush x:Key="DarkerBGBrush" Color="#272727"/>
    <Color x:Key="DarkerBGColor">#272727</Color>

</ResourceDictionary>